<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    tools:context=".fragment.frg_DoiMatKhau">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_none"
        android:orientation="vertical"
        tools:context=".fragment.frg_DoiMatKhau">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo3"

                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Đổi mật khẩu "
                android:textColor="#575151"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edt_nhapmkcu"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_dmk"
                android:hint="Nhập mật khẩu cũ"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#B2B2B2" />

            <EditText
                android:id="@+id/edt_nhapmkmoi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_dmk"
                android:hint="Nhập mật khẩu mới"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#B2B2B2" />

            <EditText
                android:id="@+id/edt_xacnhanmk"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_dmk"
                android:hint="Xác nhận mật khẩu"
                android:padding="10dp"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:textColorHint="#B2B2B2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_doiMK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_dmk"
                android:text="Đổi mật khẩu"
                android:textColor="#423F3F"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>