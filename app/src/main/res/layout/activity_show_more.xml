<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ShowMore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#CDB38B"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_ten_hang_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sdfs"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:src="@drawable/xmark" />
    </LinearLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/seach_sp_KH"
        android:hint="Nhập tên sản phẩm cần tìm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_sanPham_more"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1" />
</LinearLayout>